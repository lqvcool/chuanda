// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  clothings Clothing[]
  outfits   Outfit[]
  outfitLogs OutfitLog[]

  @@map("users")
}

model Clothing {
  id          String      @id @default(cuid())
  userId      String
  name        String
  category    ClothingCategory
  color       String
  brand       String?
  size        String?
  season      Season?
  tags        String?     // JSON array of tags
  imageUrl    String      // Local file path
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  outfitItems OutfitItem[]

  @@map("clothings")
}

model Outfit {
  id               String   @id @default(cuid())
  userId           String
  name             String
  description      String?
  occasion         String?  // casual, formal, business, etc.
  season           Season?
  generatedImageUrl String? // For future AI generation
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     OutfitItem[]
  outfitLogs OutfitLog[]

  @@map("outfits")
}

model OutfitItem {
  id        String   @id @default(cuid())
  outfitId  String
  clothingId String
  createdAt DateTime @default(now())

  // Relations
  outfit   Outfit   @relation(fields: [outfitId], references: [id], onDelete: Cascade)
  clothing Clothing @relation(fields: [clothingId], references: [id], onDelete: Cascade)

  @@unique([outfitId, clothingId])
  @@map("outfit_items")
}

model OutfitLog {
  id       String   @id @default(cuid())
  userId   String
  outfitId String
  wornDate DateTime
  occasion String?
  notes    String?
  createdAt DateTime @default(now())

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  outfit Outfit @relation(fields: [outfitId], references: [id], onDelete: Cascade)

  @@map("outfit_logs")
}

enum ClothingCategory {
  TOP         // 上衣
  BOTTOM      // 裤子
  DRESS       // 裙子
  SHOES       // 鞋子
  HAT         // 帽子
  ACCESSORY   // 配饰
  OUTERWEAR   // 外套
  UNDERWEAR   // 内衣
  SOCKS       // 袜子
  BAG         // 包包
}

enum Season {
  SPRING
  SUMMER
  AUTUMN
  WINTER
  ALL_SEASON
}
